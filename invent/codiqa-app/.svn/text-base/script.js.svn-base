$(document).ready(function() {

  $("[data-hidden=true]").hide();

  // var click_to_activate = $("[data-activate]")
  // click_to_activate.click( function() {
  $("[data-activate]").click( function() {
    // alert("hi");
    var id_shown = $(this).attr("data-activate");
    var activate_type = $(this).attr("data-activate-type")=="show";
    var element_to_show = $("#"+id_shown);
    activate_type ? element_to_show.show() : element_to_show.hide();
    // alert(id_shown);
  });
});